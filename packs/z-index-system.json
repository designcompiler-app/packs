      },
      "dropdown": {
        "$value": 100,
        "$description": "Dropdown menus, select popovers",
        "$type": "number"
      },
      "sticky": {
        "$value": 200,
        "$description": "Sticky headers, fixed sidebars",
        "$type": "number"
      },
      "overlay": {
        "$value": 300,
        "$description": "Backdrop overlays, scrims",
        "$type": "number"
      },
      "modal": {
        "$value": 400,
        "$description": "Modal dialogs, drawers",
        "$type": "number"
      },
      "popover": {
        "$value": 500,
        "$description": "Popovers, date pickers on top of modals",
        "$type": "number"
      },
      "toast": {
        "$value": 600,
        "$description": "Toast notifications, snackbars",
        "$type": "number"
      },
      "tooltip": {
        "$value": 700,
        "$description": "Tooltips — always on top of content",
        "$type": "number"
      },
      "max": {
        "$value": 9999,
        "$description": "Escape hatch for critical system UI",
        "$type": "number"
      }
    }
